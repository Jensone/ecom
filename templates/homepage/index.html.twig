{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}

{% for item in products %}
    <h4 class="p-2 mb-3 hover:bg-slate-200 hover:text-slate-900 rounded-md">
        <a href={{ path('app_product', {ref: item.ref}) }}>
            {{ item.name }} - {{ item.price }} &euro;
        </a>
    </h4>
{% endfor %}

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <a class="mt-3 py-2 px-4 bg-indigo-700 text-xl text-slate-50 rounded-md shadow"
    href="{{ path('admin')}}">Go to dashboard</a>
{% endif %}

{% endblock %}
